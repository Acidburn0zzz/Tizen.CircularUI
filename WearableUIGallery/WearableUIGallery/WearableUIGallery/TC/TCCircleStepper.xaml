<?xml version="1.0" encoding="utf-8" ?>
<w:CirclePage
    x:Class="WearableUIGallery.TC.TCCircleStepper"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WearableUIGallery"
    xmlns:w="clr-namespace:Xamarin.Forms.CircularUI;assembly=Xamarin.Forms.CircularUI"
    RotaryFocusTargetName="StepperHr">
    <w:CirclePage.Content>
        <Grid
            BackgroundColor="BlueViolet"
            HeightRequest="150"
            VerticalOptions="Center"
            WidthRequest="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="100" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="100" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Row="0"
                Grid.Column="0"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="Hr"
                TextColor="White" />
            <Label
                Grid.Row="0"
                Grid.Column="1"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text=""
                TextColor="White" />
            <Label
                Grid.Row="0"
                Grid.Column="2"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text="Mm"
                TextColor="White" />
            <Label
                Grid.Row="0"
                Grid.Column="3"
                FontSize="Medium"
                HorizontalOptions="Center"
                Text=""
                TextColor="White" />
            <Label
                Grid.Row="0"
                Grid.Column="4"
                FontSize="Medium"
                FormattedText=""
                HorizontalOptions="Center"
                Text="Sec"
                TextColor="White" />
            <w:CircleStepper
                x:Name="StepperHr"
                Grid.Row="1"
                Grid.Column="0"
                Focused="OnFocusedHr"
                HorizontalOptions="Center"
                Maximum="23"
                Minimum="0"
                Color="Coral"
                Value="0" />
            <Label
                Grid.Row="1"
                Grid.Column="1"
                FontSize="Large"
                HorizontalOptions="Center"
                Text=":" />
            <w:CircleStepper
                x:Name="StepperMm"
                Grid.Row="1"
                Grid.Column="2"
                Focused="OnFocusedMm"
                HorizontalOptions="Center"
                Maximum="59"
                Minimum="0"
                Color="Blue"
                Value="0" />
            <Label
                Grid.Row="1"
                Grid.Column="3"
                FontSize="Large"
                HorizontalOptions="Center"
                Text=":" />
            <w:CircleStepper
                x:Name="StepperSec"
                Grid.Row="1"
                Grid.Column="4"
                Focused="OnFocusedSec"
                HorizontalOptions="Center"
                Maximum="59"
                Minimum="0"
                Color="DarkRed"
                Value="0" />
        </Grid>
    </w:CirclePage.Content>
</w:CirclePage>