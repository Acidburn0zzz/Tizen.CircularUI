{
  "metadata": [
    {
      "src": [
        {
          "files": ["**/*.csproj"],
          "exclude": ["**/obj/**", "**/bin/**"],
          "src": "../../src"
        }
      ],
      "dest": "obj/api",
      "disableGitFeatures": false
    }
  ],
  "build": {
    "content": [
      {
        "files": ["api/**.yml"],
        "src": "obj"
      },
      {
        "files": ["index.md", "toc.yml", "api/index.md"]
      },
      {
        "files": ["*.md"],
        "src": "../guide",
        "dest": "guide"
      }
    ],
    "resource": [
      {
        "files": ["favicon.ico", "logo.png"]
      },
      {
        "files": ["widgets.png"],
        "src": "../design/data/"
      },
      {
        "files": ["data/*"],
        "src":"../guide",
        "dest":"guide"
      }
    ],
    "globalMetadata": {
      "_appLogoPath": "logo.png",
      "_appFaviconPath": "favicon.ico",
      "_appFooter":
        "<span>Copyright &copy; 2018-2019 Samsung <br> Generated by <strong>DocFX</strong></span>",
      "_disableAffix": false,
      "_disableContribution": true,
      "_enableSearch": "true"
    },
    "dest": ".site",
    "xref": ["https://developer.tizen.org/dev-guide/csapi/xrefmap.yml"],
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": ["default"],
    "postProcessors": ["ExtractSearchIndex"],
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
  }
}
